<%- include('../partials/header.ejs')%>
    <div class="content">
        <main>
        <form action='/events' enctype="multipart/form-data" method='POST' class="new-form">
            <label for="category">Category </label>
            <select name="category" id="category" required>
                <option value="" disabled selected>--Select a Category--</option>
                <option value="Sports">Sports</option>
                <option value="Video Games">Video Games</option>
                <option value="Crafts">Crafts</option>
                <option value="Study">Study</option>
                <option value="Other">Other</option>
            </select>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="title" required>
            <label for="content">Details</label>
            <input type="text" name="content" id="content" placeholder="description" required minlength="10">
            <label for="location">Location</label>
            <input type="text" name="location" id="location" placeholder="location" required>
            <label for="start">Start</label>
            <input type="datetime-local" name="start" id="start" required>
            <label for="end">End</label>
            <input type="datetime-local" name="end" id="end" required>
            <label for="image">Image<br>**Max Allowed File Size is 10MB</label>
            <input type="file" id="image" name="image" required>
            <input type="submit" value="Submit">
        </form>
    </main>
    </div>
    <%- include('../partials/footer.ejs')%>